@page
@model ProjectManagementApp.Pages.TaskItems.DeleteModel
@{
    ViewData["Title"] = "Delete Task Item";
}
<h1>Delete Task Item</h1>
<h3>Are you sure you want to delete this task item?</h3>
<div>
    <h4>Task Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.TaskItem?.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.TaskItem?.Description</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.TaskItem?.Status</dd>
        <dt class="col-sm-2">Work Package</dt>
        <dd class="col-sm-10">@Model.TaskItem?.WorkPackage?.Name</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="TaskItem.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
