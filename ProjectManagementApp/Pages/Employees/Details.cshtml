@page
@model ProjectManagementApp.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

@if (Model.Employee == null)
{
    <p>Employee not found.</p>
}
else
{
    <div class="card p-3 mb-3">
        <h4>@Model.Employee.FirstName @Model.Employee.LastName</h4>
        <p><strong>Email:</strong> @Model.Employee.Email</p>
        <p><strong>Active:</strong> @Model.Employee.IsActive</p>
        <p><strong>Hire Date:</strong> @Model.Employee.HireDate.ToShortDateString()</p>
        @if (Model.Employee.TeamMembership != null)
        {
            <p><strong>Team:</strong> <a asp-page="/Teams/Details" asp-route-id="@Model.Employee.TeamMembership.Team.Id">@Model.Employee.TeamMembership.Team.Name</a></p>
        }
        else
        {
             <p><strong>Team:</strong> No team assigned</p>
        }
    </div>

    <h4>Assigned Tasks</h4>
    @if (Model.Employee.TaskAssignments?.Any() ?? false)
    {
        <ul class="list-group mb-3">
            @foreach (var ta in Model.Employee.TaskAssignments)
            {
                <li class="list-group-item">
                    <a asp-page="/TaskItems/Details" asp-route-id="@ta.TaskItemId">@ta.TaskItem.Name</a> - @ta.TaskItem.Status - Work Package: <a asp-page="/WorkPackages/Details" asp-route-id="@ta.TaskItem.WorkPackage?.Id">@ta.TaskItem.WorkPackage?.Name</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No tasks assigned.</p>
    }

    <h4>Timesheet Entries</h4>

    @if (Model.Employee.TimesheetEntries?.Any() ?? false)
    {
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Hours Worked</th>
                    <th>Activity</th>
                    <th>Task</th>
                    <th>Work Package</th>
                    <th>Project</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model.Employee.TimesheetEntries
                        .OrderByDescending(e => e.WorkDate))
                {
                    var activity = entry.Activity;
                    var task = activity?.TaskItem;
                    var wp = task?.WorkPackage;
                    var project = wp?.Project;

                    <tr>
                        <td>@entry.WorkDate.ToShortDateString()</td>
                        <td>@entry.Hours</td>
                        <td>@(activity != null ? activity.Name : "-")</td>
                        <td>
                            @if (task != null)
                            {
                                <a asp-page="/TaskItems/Details" asp-route-id="@task.Id">@task.Name</a>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                        <td>
                            @if (wp != null)
                            {
                                <a asp-page="/WorkPackages/Details" asp-route-id="@wp.Id">@wp.Name</a>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                        <td>
                            @if (project != null)
                            {
                                <a asp-page="/Projects/Details" asp-route-id="@project.Id">@project.Name</a>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                        <td>@entry.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No timesheet entries.</p>
    }


    <a asp-page="Index" class="btn btn-secondary mt-3">Back to List</a>
}