@page
@model ProjectManagementApp.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Create Employee";
}

<h1>Create Employee</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Employee.FirstName">First Name</label>
        <input asp-for="Employee.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.LastName">Last Name</label>
        <input asp-for="Employee.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.Email"></label>
        <input asp-for="Employee.Email" class="form-control" type="email" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.HireDate">Hire Date</label>
        <input asp-for="Employee.HireDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.IsActive">Active Status</label>
        <input asp-for="Employee.IsActive" class="form-check-input" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>


