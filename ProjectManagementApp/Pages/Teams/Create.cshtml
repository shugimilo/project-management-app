@page
@model ProjectManagementApp.Pages.Teams.CreateModel
@{
    ViewData["Title"] = "Create Team";
}

<h2>Create Team</h2>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Team.Name" class="form-label"></label>
        <input asp-for="Team.Name" class="form-control" />
        <span asp-validation-for="Team.Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Team.Description" class="form-label"></label>
        <textarea asp-for="Team.Description" class="form-control"></textarea>
        <span asp-validation-for="Team.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
