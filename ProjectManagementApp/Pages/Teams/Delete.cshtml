@page
@model ProjectManagementApp.Pages.Teams.DeleteModel
@{
    ViewData["Title"] = "Delete Team";
}

<h1>Delete Team</h1>

@if (Model.Team == null)
{
    <p>Team not found.</p>
}
else
{
    <div class="card p-3 mb-3">
        <h4>@Model.Team.Name</h4>
        <p>@Model.Team.Description</p>
    </div>

    <h5>Are you sure you want to delete this team?</h5>

    <form method="post">
        <input type="hidden" asp-for="Team.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
