@page
@model ProjectManagementApp.Pages.WorkPackages.IndexModel
@{
    ViewData["Title"] = "Work Packages";
}

<h1>Work Packages</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Work Package</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Project</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wp in Model.WorkPackages)
        {
            <tr>
                <td>@wp.Id</td>
                <td>@wp.Name</td>
                <td>@wp.Description</td>
                <td>@wp.Project?.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@wp.Id" class="btn btn-sm btn-warning">Edit</a> 
                    <a asp-page="Details" asp-route-id="@wp.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="Delete" asp-route-id="@wp.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>