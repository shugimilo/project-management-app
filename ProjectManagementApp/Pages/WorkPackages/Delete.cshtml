@page
@model ProjectManagementApp.Pages.WorkPackages.DeleteModel
@{
    ViewData["Title"] = "Delete Work Package";
}

<h1>Delete Work Package</h1>

<h3>Are you sure you want to delete this work package?</h3>
<div>
    <h4>Work Package</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.WorkPackage?.Name</dd>

        <dt class="col-sm-2">Project</dt>
        <dd class="col-sm-10">@Model.WorkPackage?.Project?.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.WorkPackage?.Description</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="WorkPackage.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
