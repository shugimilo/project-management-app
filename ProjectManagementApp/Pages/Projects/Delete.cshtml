@page
@model ProjectManagementApp.Pages.Projects.DeleteModel
@{
    ViewData["Title"] = "Delete Project";
}

<h1>Delete Project</h1>

@if (Model.Project == null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> Project not found or already deleted.
    </div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    return;
}
else
{
    <h3>Are you sure you want to delete this project?</h3>
    <div>
        <h4>Project</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Project.Name
            </dd>
            <dt class="col-sm-2">
                Code
            </dt>
            <dd class="col-sm-10">
                @Model.Project.Code
            </dd>
            <dt class="col-sm-2">
                Start Date
            </dt>
            <dd class="col-sm-10">
                @(Model.Project.StartDate?.ToString("d") ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                End Date
            </dt>
            <dd class="col-sm-10">
                @(Model.Project.EndDate?.ToString("d") ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Project.Description
            </dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Project.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}
