@page "{taskItemId:int?}"
@model ProjectManagementApp.Pages.Activities.CreateModel
@{
    ViewData["Title"] = "Create Activity";
}

<h1>Create Activity</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Activity.TaskItemId" />

    <div class="form-group">
        <label asp-for="Activity.Name" class="control-label"></label>
        <input asp-for="Activity.Name" class="form-control" />
        <span asp-validation-for="Activity.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Activity.Description" class="control-label"></label>
        <textarea asp-for="Activity.Description" class="form-control"></textarea>
        <span asp-validation-for="Activity.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Activity.PlannedHours" class="control-label"></label>
        <input asp-for="Activity.PlannedHours" class="form-control" type="number" />
        <span asp-validation-for="Activity.PlannedHours" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="/TaskItems/Details" asp-route-id="@Model.Activity.TaskItemId" class="btn btn-secondary">Cancel</a>
</form>
